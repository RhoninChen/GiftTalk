<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile"
    android:gravity="center">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:background="@drawable/bg_activity_crowd_choice"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_slect_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="请选择您的性别"
                android:textColor="#88000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_old_backward"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44000000" />

        <FrameLayout
            android:id="@+id/selects"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_select_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_select_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_gender_boy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="男孩" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_select_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_gender_girl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="女孩" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_select_identity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/chuzhong"
                    style="@style/style_identity"
                    android:layout_alignEnd="@+id/gaozhong"
                    android:layout_alignRight="@+id/gaozhong"
                    android:background="#9BD655"
                    android:text="初中生" />

                <Button
                    android:id="@+id/gaozhong"
                    style="@style/style_identity"
                    android:layout_below="@+id/chuzhong"
                    android:layout_marginTop="10dp"
                    android:background="#FF8D8B"
                    android:text="高中生" />

                <Button
                    android:id="@+id/daxue"
                    style="@style/style_identity"
                    android:layout_below="@+id/gaozhong"
                    android:layout_marginTop="10dp"
                    android:background="#9E9EFF"
                    android:text="大学生" />

                <Button
                    android:id="@+id/fresh"
                    style="@style/style_identity"
                    android:layout_below="@+id/daxue"
                    android:layout_marginTop="10dp"
                    android:background="#FF91BF"
                    android:text="职场新人" />

                <Button
                    android:id="@+id/old_work"
                    style="@style/style_identity"
                    android:layout_below="@+id/fresh"
                    android:layout_marginTop="10dp"
                    android:background="#E7B395"
                    android:text="资深工作党" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>